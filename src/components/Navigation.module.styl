@import '../Global'

.siteNavigation {
  background: colors.darkGray
  color: colors.white
  height: 100%

  header {
    padding: r(10px) r(20px)
    text-align: center
    background: colors.gray

    h1 {
      font-size: r(24px)
      margin-bottom: r(5px)
    }
  }

  ul {
    list-style: none
    padding: r(10px) 0
    margin: 0

    li {
      padding: r(3px) r(10px)
    }

    ul {
      li {
        padding: 0
        padding-left: r(10px)
      }
    }
  }

  a {
    color: colors.orange
    
    &.active {
      color: colors.white
    }
  }
}
